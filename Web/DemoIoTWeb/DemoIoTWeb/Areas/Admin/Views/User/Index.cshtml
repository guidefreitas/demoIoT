@using DemoIoTWeb.Models;
@using DemoIoTWeb.Helpers;

@{
    ViewBag.Title = "Devices";
}

<h2>Devices</h2>

<div class="row">
    <div class="col-md-12">
        @Html.Flash()
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Create User", "Create", new { area = "Admin", controller = "User" }, new { @class = "btn btn-success btn-sm" })
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @if (Model.Count == 0)
        {
            <p>Nenhum usuário cadastrado</p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Email</td>
                        <td>Details</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (User user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Email</td>
                            <td>@Html.ActionLink("Edit", "Edit", new { Id = user.Id }, new { @class = "btn btn-default btn-sm" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>



