@using DemoIoTWeb.Models;
@using DemoIoTWeb.Helpers;

@{
    ViewBag.Title = "Devices";
}

<h2>Devices</h2>

<div class="row">
    <div class="col-md-12">
        @Html.Flash()
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Create Device", "Create", "Device", new { @class = "btn btn-success btn-sm" })
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @if (Model.Count == 0)
        {
            <p>Nenhum dispositivo cadastrado</p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Serial Number</td>
                        <td>Description</td>
                        <td>User</td>
                        <td>Details</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Device device in Model)
                    {
                        <tr>
                            <td>@device.Id</td>
                            <td>@device.SerialNumber</td>
                            <td>@device.Description</td>
                            <td>@device.User.Email</td>
                            <td>@Html.ActionLink("Detalhes", "Detail", new { Id = device.Id }, new { @class = "btn btn-default btn-sm" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>



